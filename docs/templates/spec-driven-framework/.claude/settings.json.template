{
  "plansDirectory": "./plans",
  "permissions": {
    "allow": [
      "Read(**)",
      "Write(**)",
      "Edit(**)",
      "Glob",
      "Grep",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git mv:*)",
      "Bash(git rm:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Read(~/.claude/plans/**)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/validate-task-dirs.py\""
          },
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/validate-task-frontmatter.py\""
          }
        ]
      }
    ]
  }
}
